<%= stylesheet_link_tag 'devise', media: 'all', 'data-turbolinks-track': 'reload' %>

<div id="signup-section" class="devise-page">
  <div id="signup-container" class="devise-container">

    <div id="signup-content" class="devise-content">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <div class="devise-page-title">
        <h2>Forgot your password?</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions button">
          <%= f.submit "RESET PASS" %>
        </div>
      <% end %>
    </div>
    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
